[user]
	name = Johan Brook
	email = johan.jvb@gmail.com
[alias]
	co = checkout
	ci = commit
	cia = commit -a -m
	b = branch
	p = push
	pom = push origin master
	log = log --topo-order --decorate
	glog = log --format='%C(cyan)%h%Creset %Cgreen%an%Creset\t%s' --graph
	s = status
	pul = pull --rebase
	unstage = reset HEAD
	n = !"git ls-files | xargs notes | awk -F: '{ print $1,$2; print $3,$4; print $5}' | grcat conf.notes "
	committers = shortlog -nse --no-merges
	sync = !git pull origin master && git push origin master
	fuckit = reset --hard HEAD
	untrack = rm --cached
	gui = !sh -c '/usr/local/git/libexec/git-core/git-gui'
	latest = log --since=yesterday
	hash = !"git rev-parse --short HEAD |tr -d '\n' |pbcopy && echo 'Copied hash to clipboard'"
	current = !"git log $(git rev-parse --abbrev-ref HEAD) ^master --no-merges"

[color]
	diff = auto
	status = auto
	branch = auto

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = cyan bold
	branch = green bold

[color "branch"]
	current = green bold
	local = yellow
	remote = yellow

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red reverse
  new = green reverse
  whitespace = white reverse

[core]
	excludesfile = $HOME/.gitignore
	editor = subl -w
[format]
	pretty = %C(cyan)%h%C(green) %an\t%Creset%s

[github]
	user = johanbrook

[difftool]
	prompt = false

[credential]
	helper = osxkeychain

[push]
	default = simple
[rebase]
	autoStash = true
